<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create a New Listing</h3>
    <form
      method="post"
      action="/listings"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          id="title"
          class="form-control"
          name="listing[title]"
          placeholder="Add a catchy title"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          class="form-control"
          id="description"
          rows="3"
          cols="24"
          name="listing[description]"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
        <div class="valid-feedback">Description look good!</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          id="image"
          class="form-control"
          name="listing[image]"
          type="file"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Enter Price</label>
          <input
            name="listing[price]"
            id="price"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
          <div class="valid-feedback">Price looks good!</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Enter Country</label>
          <input
            name="listing[country]"
            class="form-control"
            id="country"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
          <div class="valid-feedback">Country name looks good!</div>
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="category" class="form-label">Category</label>
          <select
            name="listing[category]"
            id="category"
            class="form-select"
            required
          >
            <option value="" disabled selected>Select a category</option>
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic Cities">Iconic Cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Castles">Castles</option>
            <option value="Amazing Pools">Amazing Pools</option>
            <option value="Camping">Camping</option>
            <option value="Farms">Farms</option>
            <option value="Arctic">Arctic</option>
          </select>
          <div class="invalid-feedback">Please select a category</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Enter Location</label>
          <input
            name="listing[location]"
            class="form-control"
            id="location"
            placeholder="Jaipur,Rajasthan"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
          <div class="valid-feedback">Location looks good!</div>
        </div>
      </div>

      <button class="btn btn-dark add-btn mt-3">Add</button><br /><br />
    </form>
  </div>
</div>
